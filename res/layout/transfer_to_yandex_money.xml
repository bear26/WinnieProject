<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
                  android:layout_width="match_parent" android:layout_height="match_parent"
                  android:id="@+id/linearLayout2">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                      android:layout_height="wrap_content" android:id="@+id/linearLayout">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/MyBalanceTextView"
                      android:text="Баланс: " android:textIsSelectable="false"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge" android:text="0.00 Руб"
                      android:id="@+id/MyBalanceTransferToYandexMoney"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent"
                      android:layout_height="wrap_content">
            <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                          android:layout_height="fill_parent">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textAppearance="?android:attr/textAppearanceLarge"
                          android:text="Отправить на ЯД: " android:id="@+id/textView"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/yandexMoneyNumber"
                          android:text="445556456546546"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                          android:layout_height="fill_parent">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textAppearance="?android:attr/textAppearanceLarge" android:text="Сумма: "
                          android:id="@+id/textView2"/>
                <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:inputType="numberDecimal" android:ems="10" android:id="@+id/sumToYandexMoney"
                          android:text="0"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                      android:layout_height="fill_parent">
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Оплатить"
                    android:id="@+id/buttonTransferToYandexMoneyEnd"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>